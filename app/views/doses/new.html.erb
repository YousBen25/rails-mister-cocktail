<div class="container">
  <div class="row d-flex justify-content-center py-4">
    <div class="col-md-6">
      <h1>Create your doses:</h1>
      <%= simple_form_for([@cocktail, @dose]) do |f| %>
        <%= f.input :description%>
        <%= f.association :ingredient, input_html: { class: 'select2' } %>
        <%= f.button :submit, class: "btn-success" %>
      <% end %>
    </div>
  </div>
</div>

