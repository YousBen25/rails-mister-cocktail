<%= render 'shared/navbar' %>
<div class="banner  d-flex flex-column align-items-center justify-content-end" style="background-image: linear-gradient(rgba(0,0,0,0.2),rgba(0,0,0,0.2)), url('<%= image_path "Cocktails-banner.jpg" %>')">
  <div class="container text-center">
    <div>
      <h1 class="white-title">Cocktails <strong>recipes</strong> for <strong>inspired folks</strong>!</h1>
      <p class="white-p">Change your life and learn how to create the best cocktails.</p>
    </div>
    <div class="d-flex justify-content-center">
        <form class="form-inline my-2 my-lg-0" action="/">
          <input class="form-control mr-sm-2" name="query" type="search" placeholder="Mojito? Kaipi ..." aria-label="Search">
          <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
        </form>
    </div>
  </div>
</div>

<div class="container py-5">
  <div class="row">
      <% @cocktails.each do |cocktail| %>
        <div class="col-12 col-md-4">
          <%= link_to cocktail_path(cocktail) do %>
            <div class="card-category my-3" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= image_path "strawberry-cocktail.jpg" %>')">
              <h2><%=cocktail.name%></h2>
            </div>
          <% end %>
        </div>
      <% end %>
  </div>
</div>
<%= render "shared/footer" %>




