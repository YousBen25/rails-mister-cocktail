<div class="banner show" style="background-image: linear-gradient(rgba(0,0,0,0.1),rgba(0,0,0,0.1)), url('<%= image_path "cocktails.jpg" %>')">
</div>
  <div class="container show-info">
    <div class="row">
      <div class="col-md-8 card-description">
        <div>
          <h1><%= @cocktail.name %></h1>
        </div>
      </div>
      <div class="col-md-4 card-ingredient">
        <h3>Ingredients:</h3>
        <ul>
        <% @cocktail.doses.each do |dose|  %>
          <li>
            <%= dose.ingredient.name %><%= dose.description  %>
            <%= link_to dose_path(dose), method: :delete, data: { confirm: "Delete #{dose.ingredient.name} ?" } do %>
              <i class="fas fa-trash-alt"></i>
            <% end %>
          </li>
        <% end %>
        </ul>
        <%= link_to "Add a new dose", new_cocktail_dose_path(@cocktail), class: "btn-dose"%>
      </div>
    </div>
  </div>


